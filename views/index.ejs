<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include("./partials/head.ejs") %>
	<body>
		
		<!-- /Header -->
		<%- include("./partials/header") %>

		<!-- Banner -->
		<div class="banner">
			<img src="../images/header-artifact-posta.png" alt="Banner de ofertas">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Novedades</h2>
				</div>
				<!-- Show the "ultimos" products -->

				<% for(let i=0; i < 4; i++) { %>   
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productos">
							<figure class="product-box_image">
								<img src="<%=datos.productos[i].imagen  %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%=datos.productos[i].nombre_producto  %></h2>
								<p><%=datos.productos[i].descripcion%> </p>
								<p>Comentarios: 3 </p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			</div>	
		</div>
		<!-- /Novedades -->
		<!-- Más comentados -->
		<div class="container products-wrapper"></div>
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% for(let i=0; i < 4; i++) { %>   
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/productos">
								<figure class="product-box_image">
									<img src="<%=datos.productos[i].imagen  %>" alt="">
								</figure>
								<article class="product-box_data">
									<h2><%=datos.productos[i].nombre_producto  %></h2>
									<p><%=datos.productos[i].descripcion%> </p>
									<p>Comentarios: <%= datos.productos[i].comentarios.length %></p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
				
				
			</div>
		</div>
		
		<!-- footer -->
		<%- include("./partials/footer") %>

		<!-- /footer -->
	</body>	
</html>