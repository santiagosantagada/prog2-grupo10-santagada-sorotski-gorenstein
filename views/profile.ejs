<!DOCTYPE html>
<html lang="es">
	<!-- include Head -->
	<%- include("./partials/head") %>
	
	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include("./partials/headerLogueado") %>
		<% }else {%>
			<%- include("./partials/header") %>
		<%} %>

		<!-- /Header -->

		<!-- Datos del usuario -->
		<section class="info-usuario container products-wrapper">
			<div class="row">
				<div class="img-container offset-3 col-2">
					<img src="<%=datos.foto%>" alt="foto de perfil" class="foto-perfil">
				</div>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"> <%= datos.usuario %>
							<a href="/users/profileEdit">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
						<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					</div>
					<div>
						<ul class=""> 
							<li> <%=datos.email %> </li>
							<li> <%=datos.product.length %> productos</li>	
							
						</ul>
					</div>
				</div>
			</div>
		</section>
		<!-- /Datos del usuario -->

		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show the mis products -->
				
				<% if (datos.product && datos.product.length > 0) { %>
					<% for (let i = 0; i < datos.product.length; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%=datos.product[i].id%>">
									<figure class="product-box_image">
										<img src="<%= datos.product[i].foto %>" alt="">
									</figure>
									<article class="product-box_data">
										<h2><%=datos.product[i].nombreProducto  %></h2>
										<p><%=datos.product[i].descripcion  %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				<% } else { %>
					<p>No hay productos disponibles</p>
				<% } %>
				
				
				
			</div>
		</div>


		<!-- footer -->
		<%- include("./partials/footer") %>

		<!-- /footer -->
	</body>	
</html>