<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include("./partials/head") %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include("./partials/headerLogueado") %>
		<% }else {%>
			<%- include("./partials/header") %>
		<%} %>

		<!-- /Header -->
		

		<!-- product detail -->
		
		<div class="container products-wrapper">
			<div class="column">
				<h2 class="products-title"><%=datos.nombreProducto  %></h2> 
				    
				<h2><a href="/product/productadd" class="hiper">  Editar</a></h2>
				
			</div>
			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= datos.foto %>" alt="" class="product-detail-img">
						<p class="product-detail-description"><%=datos.descripcion%> </p>
					</article>
					<div class="col-12 col-lg-4">
						<section class="comments">
							<% for(let i=0; i < datos.comentario.length ; i++) { %>   
							<article>

								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile"><%datos.nombreProducto  //=datos.productos[0].comentarios[i].nombre_usuario  %></a> </strong>
									<%=datos.comentario[i].textoComentario  %></p>
								</div>
							</article>
							<% } %>
						</section>
						<form class="form" action="/product" method="get">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						
					</div>
				</div>
			</div>
		</div>
		<!-- /product detail -->

		<!-- footer -->
		<%- include("./partials/footer") %>

		<!-- /footer -->

	</body>	
</html>